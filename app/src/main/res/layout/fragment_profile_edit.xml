<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menufragments.ProfileEditFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/vk_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/just_white"
            app:title="Edit Profile" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vk_edit_photo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout_profile_edit">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vk_profile_edit_custom_avatar"
            style="@style/vk_custom_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/photo_of_me" />

        <ImageView
            android:id="@+id/vk_profile_edit_photo_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_baseline_photo_camera_24"
            app:layout_constraintBottom_toBottomOf="@+id/vk_profile_edit_custom_avatar"
            app:layout_constraintEnd_toEndOf="@+id/vk_profile_edit_custom_avatar"
            app:layout_constraintStart_toStartOf="@+id/vk_profile_edit_custom_avatar"
            app:layout_constraintTop_toTopOf="@+id/vk_profile_edit_custom_avatar" />

        <EditText
            android:id="@+id/vk_profile_edit_name"
            style="@style/vk_edit_email_text_style"
            android:layout_width="264dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:hint="Name"
            app:layout_constraintBottom_toTopOf="@+id/vk_profile_edit_status"
            app:layout_constraintStart_toEndOf="@+id/vk_profile_edit_custom_avatar" />

        <EditText
            android:id="@+id/vk_profile_edit_status"
            style="@style/vk_edit_email_text_style"
            android:layout_width="264dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:hint="Status"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vk_profile_edit_custom_avatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/vk_finish_edit_button"
        style="@style/vk_button_edit_style"
        android:layout_marginTop="48dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_edit_photo_container" />

    <Button
        android:id="@+id/vk_cancel_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Cancel"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_finish_edit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>