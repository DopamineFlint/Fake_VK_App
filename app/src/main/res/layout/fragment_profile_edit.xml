<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/just_white"
    tools:context=".menufragments.ProfileEditFragment">

    <EditText
        android:id="@+id/vk_profile_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:hint="NameFamilyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vk_profile_edit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_profile_edit_name" />

    <Button
        android:id="@+id/vk_finish_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Finish"
        app:layout_constraintEnd_toEndOf="@+id/vk_profile_edit_status"
        app:layout_constraintStart_toStartOf="@+id/vk_profile_edit_status"
        app:layout_constraintTop_toBottomOf="@+id/vk_profile_edit_status" />

    <Button
        android:id="@+id/vk_cancel_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/vk_finish_edit_button"
        app:layout_constraintStart_toStartOf="@+id/vk_finish_edit_button"
        app:layout_constraintTop_toBottomOf="@+id/vk_finish_edit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>